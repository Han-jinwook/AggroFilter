{
  "manifest_version": 3,
  "name": "AggroFilter Extension",
  "version": "1.0",
  "description": "유튜브 자막을 가로채서 어그로필터 서버로 전송합니다.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://aggro-filter.netlify.app/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch?v=*"],
      "js": ["content.js"]
    }
  ]
}
