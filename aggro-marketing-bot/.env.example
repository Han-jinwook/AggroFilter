# ─────────────── 섹션1: 수집 엔진 ───────────────
YOUTUBE_API_KEY=your_youtube_api_key_here
DATABASE_URL=postgresql://user:password@host:5432/dbname
MAIN_APP_URL=https://aggrofilter.com
BOT_SECRET=your_bot_secret_here

# 수집 옵션 기본값 (대시보드에서 런타임 변경 가능)
TRACK_N_TOTAL=10
TRACK_M_PER_CATEGORY=3
DEDUP_DAYS=7
ANALYSIS_DELAY_MS=5000

# ─────────────── 섹션0: 대시보드 ───────────────
DASHBOARD_PORT=3001

# ─────────────── 섹션2: 댓글 자동화 ───────────────
# Gemini API 키 (에펨코리아 댓글 생성에 사용, 무료 한도 내)
GEMINI_API_KEY=your_gemini_api_key_here

# 로컬 크롬 사용자 데이터 디렉토리 (기존 로그인 세션 재사용)
# Windows 예시: C:\Users\YourName\AppData\Local\Google\Chrome\User Data
# Mac 예시: /Users/YourName/Library/Application Support/Google/Chrome
CHROME_USER_DATA_DIR=C:\Users\YourName\AppData\Local\Google\Chrome\User Data

# 댓글 작성 간격 (Anti-Spam, 기본: 1~2분 랜덤)
COMMENT_DELAY_MIN_MS=60000
COMMENT_DELAY_MAX_MS=120000
